<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Una Pregunta Especial</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
            background-color: #ffebf0;
            color: #d63384;
            padding: 50px;
        }
        #pregunta {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .boton {
            padding: 10px 20px;
            font-size: 18px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            margin: 10px;
        }
        #botonSi {
            background-color: #ff4081;
            color: white;
        }
        #botonNo {
            background-color: #ccc;
            color: black;
            position: absolute;
        }
        #respuesta {
            font-size: 28px;
            font-weight: bold;
            margin-top: 20px;
            display: none;
        }
    </style>
</head>
<body>
    <h1>Hola, [nombre] 💖</h1>
    <p id="pregunta">Tengo una pregunta especial para ti...</p>
    <button class="boton" id="mostrarOpciones" onclick="mostrarBotones()">Haz clic aquí</button>
    
    <div id="opciones" style="display: none;">
        <button class="boton" id="botonSi" onclick="mostrarRespuesta('¡Sabía que dirías que sí! ❤️')">Sí</button>
        <button class="boton" id="botonNo" onmouseover="moverNo()">No</button>
    </div>

    <p id="respuesta"></p>

    <script>
        function mostrarBotones() {
            document.getElementById("mostrarOpciones").style.display = "none";
            document.getElementById("opciones").style.display = "block";
        }

        function mostrarRespuesta(mensaje) {
            document.getElementById("respuesta").innerText = mensaje;
            document.getElementById("respuesta").style.display = "block";
        }

        function moverNo() {
            let botonNo = document.getElementById("botonNo");
            let x = Math.random() * (window.innerWidth - botonNo.clientWidth);
            let y = Math.random() * (window.innerHeight - botonNo.clientHeight);
            botonNo.style.left = x + "px";
            botonNo.style.top = y + "px";
        }
    </script>
</body>
</html>
